
.col-fixed-hd,
.col-fixed-landscape,
.col-fixed-square,
.col-fixed-portrait 
    position: relative


.col-fixed-hd:before,
.col-fixed-landscape:before,
.col-fixed-square:before,
.col-fixed-portrait:before 
    content: ""
    display: block


.col-fixed-hd .col-content, 
.col-fixed-landscape .col-content, 
.col-fixed-square .col-content, 
.col-fixed-portrait .col-content 
    position: absolute
    top: 0 
    right: (gutterWidth / 2 )
    bottom: 0 
    left: (gutterWidth / 2)
    padding: 0


.col-fixed-hd:before
    margin-top: 56.25%


.col-fixed-landscape:before
    margin-top: 75%


.col-fixed-square:before
    margin-top: 100%


.col-fixed-portrait:before
    margin-top: 133.33333333%


