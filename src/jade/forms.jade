extends ./layout.jade

block title
  title Typography

block leftcontent
  h3 &nbsp; 
  - var items = [ "Basic Input Element", "Collapse horizontal space" ,"Control input size","Append and Prepend buttons","Legend Fieldset", "Radios and Checkboxes" ]
  +top_left(items)
   
block content

  mixin select(lclass)
    div(class=" select-style #{lclass}")
        select
          option( value="volvo") VolvO
          option( value="saab") Saab
          option( value="mercedes") Mercedes
          option( value="audi") Audi


  h2.divide-section#Forms Forms
  p.info
    |No extra work for forms. Grid can be applied to form elements.
    |Form creation super easy and customizable

  h3#BasicInputElement Basic Input Element
  p
    | All input elements have to be wrapped in some element (div, li, p, etc.) with
    | the class
    code field
    | . The
    code= "<input>"
    | tag itself needs to have the class
    code input
    | . That's all you need!


  .preview-box
    form.row

      input(class="input width-per-100" type="text" placeholder="Text input")

      input( class="input width-per-100" type="email" placeholder="Email input")

      input( class="input width-per-100" type="password" placeholder="Password input")

      textarea( class="textarea width-per-100" placeholder="Textarea").preview-box

  h3#Collapsehorizontalspace Collapse horizontal space
  p Add <code>.collapse</code> to form

  .preview-box
     form.row.collapse

      input(class="input width-per-100" type="text" placeholder="Text input")

      input( class="input width-per-100" type="email" placeholder="Email input")

      input( class="input width-per-100" type="password" placeholder="Password input")

      textarea( class="textarea width-per-100" placeholder="Textarea")

  
  h3#Controlinputsize Control input size
  p Use grid system to control width. Also you can use  <code>.width-per-{precentage-value}</code>.

  .preview-box
    form

      .row
          input(class="input width-per-50" type="text" placeholder="width-per-50")
          input(class="input width-per-50" type="text" placeholder="width-per-50")

      .row
          input(class="input width-per-33" type="text" placeholder="width-per-33")
          input(class="input width-per-33" type="text" placeholder="width-per-33")
          input(class="input width-per-33" type="text" placeholder="width-per-33")

      .row
          input(class="width-per-20 input" type="text" placeholder="width-per-20")
          input(class="width-per-20 input" type="text" placeholder="width-per-20")
          input(class="width-per-20 input" type="text" placeholder="width-per-20")
          input(class="width-per-20 input" type="text" placeholder="width-per-20")
          input(class="width-per-20 input" type="text" placeholder="width-per-20")

      .row
          label(for="text1" class="inline width-per-25") Label 1
          input(class="input width-per-75" type="text" placeholder="Text input")

      .row
          label(for="text1" class="inline width-per-25") Label 2
          input(class="input width-per-75" type="text" placeholder="Text input")

  
  h3#AppendandPrependbuttons Append and Prepend buttons
  p
    | Add class 
    code append
    |  with position 
    code left
    |  and 
    code right
    |  to targeted button

  .preview-box
    form
      .row
        input(class="width-per-20 input" type="text" placeholder="width-per-20")
        button(class="width-per-5 button append right") Go

        .width-per-5 &nbsp;

        button(class="width-per-5 button append left") @
        input(class="width-per-20 input" type="text" placeholder="width-per-20")
        .width-per-5 &nbsp;

        button(class="width-per-5 button append left") @
        input(class="width-per-20 input" type="text" placeholder="width-per-20")
        button(class="width-per-5 button append right") Go
        .width-per-10 &nbsp;
      
  h3#Selects Selects

  .preview-box
    form.row
      +select('width-per-25')
      +select('width-per-25')
      +select('width-per-25')

    form.row
      +select('width-per-10')
      +select('width-per-20')
      +select('width-per-30')
      +select('width-per-25')
      +select('width-per-15')


  h3#LegendFieldset Legend Fieldset
  .preview-box
    form.row
      fieldset
        Legend Fieldset

        .field
          label( for="text1" class="inline") Label 1
          input( class="input desktop-12" type="email" placeholder="Email input")

        .field
          input( class="input desktop-12" type="email" placeholder="Email input")


  h3#RadiosandCheckboxes Radios and Checkboxes

  .preview-box
    form.row
      fieldset
        legend Some information about you

        p Gender:
        p
          input( type="radio" value="male" id="male" name="gender" )
          label( for="male") Male
        p
          input( type="radio" value="Female" id="female" name="gender" )
          label( for="female") Female

        p Stuff you like:
        p
          input( type="checkbox" value="CSS3" id="css3" )
          label( for="css3") CSS3
        p
          input( type="checkbox" value="HTML5" id="html5" )
          label( for="html5") HTML5
        p
          input( type="checkbox" value="JavaScript" id="javascript" )
          label( for="javascript") Javascript(type="text/javascript"). 
        p
          input( type="checkbox" value="Other" id="other" )
          label( for="other") Other




  .preview-box
    form.row
      fieldset
        legend What happens when I specify disabled or checked attributes?

        p Disabling and checking radio inputs:
        p
          input( type="radio" value="disabled" id="disabled" name="disabled" disabled )
          label( for="disabled") This is disabled

        p
          input( type="radio" value="check5" id="check5" name="check5" checked="" disabled=""  )
          label( for="check5") This is disabled and checked

        p
          input( type="radio" value="check" id="check" name="check" checked )
          label( for="check") This is checked

        p Disabling and checking checkbox inputs:
        p
          input( type="checkbox" value="disabled" id="disabled2" disabled )
          label( for="disabled2") This is disabled
        p
          input( type="checkbox" value="check" id="check2" checked )
          label( for="check2") This is checked
        p
          input( type="checkbox" value="Stop" id="disablecheck" disabled checked )
          label( for="disablecheck") This is checked and disabled
        p
          input( type="checkbox" value="Other" id="other2" )
          label( for="other2") Other




