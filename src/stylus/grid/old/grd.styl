*,
*:after,
*:before 
  margin 0
  padding 0
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box


/* Set the width of the grid */
.row 
  width 100%
  margin 0 auto


/* Attribute selector */
[class*='col-'] 
  float left
  padding 0.3em


/* Floats last ".col-" to the right */
[class*='col-']:last-of-type 
  float right


/* Clearfix */
.row:after 
  content ""
  display table
  clear both

/* Main Widths */
.col-1
  width 100%
.col-2
  width 50%
.col-3
  width 33.33333333333333%
.col-4
  width 25%
