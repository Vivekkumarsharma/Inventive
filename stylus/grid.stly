/*
    
    Config

*/

// Grid

columns=       12
gutterWidth=   36px

// Column size

columnWidth=   100%/columns

// Break-points

screenTablet=  768px
screenDesktop= 992px
screenLarge=   1200px



/*
    
    Mobile and up
 
*/

[class*="col-fixed-"] 
  float: left
  width: 100%


.col-group 
    padding: 0 gutterWidth
    clear()


.col-group .col-group 
    padding: 0


.col-group [class*="col-"] 
    min-height: 1px
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box


.col-group [class*="push-col-"],
.col-group [class*="pull-"] 
    position: relative


// Columns
[class*="col-mb-"]
    float: left
    padding-right: (gutterWidth / 2)
    padding-left: (gutterWidth / 2)

fluidable(index)  
    .col-mb-{index} 
        width: columnWidth * index
        
    if(index < columns )
        fluidable(index + 1)

fluidable(1)
// fluidable(columns)


//    Tablet and up

@media (min-width: screenTablet) 

    .container 
        max-width: screenTablet - (gutterWidth * 2)
        center-block()
    

    // Columns
    if (index > 0)
        fluidable(index)  
            .col-index 
                padding-left: (gutterWidth / 2)
                padding-right: (gutterWidth / 2)
                width: columnWidth * index
                float: left
            
            fluidable(index - 1)
    
    fluidable(0) 
    fluidable(columns)


    // Offset
    if (index > -1)
        offset(index)  
            .col-offset-index 
                margin-left: columnWidth * index
            
            offset(index - 1)
    
    offset(0) 
    offset(columns)


    // Pull
    if (index > -1) 
        pull(index) 
            .col-pull-index 
                right: columnWidth * index
            
            pull(index - 1)
    
    pull(0) 
    pull(columns)


    // push-col
    if (index > -1) 
        push-col(index) 
            .col-push-col-index 
                left: columnWidth * index
            
            push-col(index - 1)
    
    push-col(0) 
    push-col(columns)


    // Groups

    .col-group 
        margin-right: gutterWidth / -2
        margin-left: gutterWidth / -2
        padding: 0
        clear()
    



