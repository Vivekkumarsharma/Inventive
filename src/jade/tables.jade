extends ./layout.jade

block title
  title Tables

block leftcontent
 h3 &nbsp; 
 - var items = [ "Simple", "Hover Effect" ,"Zebra","Rounded and Bordered","Zebra, Rounded and Bordered","Horizontal Minimalist","Vertical Minimalist","Row Based Box","Column Based Box", "Vertical Zebra Style", "One Column Emphasis", "Newspaper A","Newspaper B","Newspaper C" ]
 +top_left(items)

block content

  h2.divide-section Tables
  
  p.info Lots of options. You will enjoy.
  
  
  
  mixin table(thead_ths,tbody_trs)
     
    thead
      tr
        for th in thead_ths
          th(scope="col")= th

    tbody
      for tr in tbody_trs
        tr 
          for td,index in tr
            td(data-title=thead_ths[index])= td


  - var th_cols = [ 'Comedy','Adventure','Action','Children' ]
  - var td_rows = [ ['Scary Movie', 'Indiana Jones', 'The Punisher' ,'Wall-E'], ['Epic Movie', 'Star Wars', 'Bad Boys' ,'Madagascar'], ['Spartan', 'LOTR', 'Die Hard' ,'Finding Nemo'], ['Dr. Dolittle', 'The Mummy', '300' ,'A Bug\'s Life']  ]
               

  
  h2#Simple.divide-section Simple Table
  .preview-box
      table(class="table")
        +table(th_cols,td_rows)

  h2#HoverEffect.divide-section Simple Table with hover effect
  .preview-box
    table(class="table hover")
      +table(th_cols,td_rows)
      

  h2#Zebra.divide-section Zebra Table
  .preview-box
    table.table.zebra
      +table(th_cols,td_rows)

  h2#RoundedandBordered.divide-section Rounded and Bordered table
  p Normal table for tablet and desktop
  p 
    | No table for mobiles very handy and suggestive. 
    | To appy just use <code>.no-table</code>. 
    | See below live example
    //- | This idea is inspired from 
    //- a(href="http://css-tricks.com/responsive-data-tables/",rel="nofollow") Css Tricks
    //- |  and improved.  
    | Click on mobile icon to see how this works.

  .preview-box
    table(class="no-table bordered rounded")
      +table(th_cols,td_rows)    

  h2#ZebraRoundedandBordered.divide-section Zebra, Rounded and Bordered  Table
  .preview-box
    table(class="rounded zebra bordered no-table")
      +table(th_cols,td_rows)    
     

  h1.divide-section Extended Table Styles
  
  h2#HorizontalMinimalist.divide-section Horizontal Minimalist  
  .preview-box
    table( id="hor-minimalist-a" summary="Employee Pay Sheet",class="no-table")
      +table(th_cols,td_rows)
              
  h2.divide-section Horizontal Minimalist with lines
  .preview-box
    table( id="hor-minimalist-b" summary="Employee Pay Sheet",class="no-table")
      +table(th_cols,td_rows)
          
  h2#VerticalMinimalist.divide-section Vertical Minimalist    
  .preview-box
    table( id="ver-minimalist" summary="Most Favorite Movies",class="no-table")
      +table(th_cols,td_rows)
          
  h2#RowBasedBox.divide-section Row Based Box 
  .preview-box
    table( id="box-table-a" summary="Employee Pay Sheet",class="no-table")
      +table(th_cols,td_rows)
      
  h2#ColumnBasedBox.divide-section Column Based Box
  .preview-box
    table( id="box-table-b" summary="Most Favorit Movies",class="no-table")
      +table(th_cols,td_rows)

  
  h2#VerticalZebraStyle .divide-section  Vertical Zebra Style 
  .preview-box
    table( id="ver-zebra" summary="Most Favorite Movies",class="no-table")
      colgroup
          col( class="vzebra-odd" )
          col( class="vzebra-even" )
          col( class="vzebra-odd" )
          col( class="vzebra-even" )
      
      thead
          tr
              th( scope="col" id="vzebra-comedy") Comedy
              th( scope="col" id="vzebra-adventure") Adventure
              th( scope="col" id="vzebra-action") Action
              th( scope="col" id="vzebra-children") Children
          
      
      tbody
          tr
              td Scary Movie
              td Indiana Jones
              td The Punisher
              td Wall-E
          
          tr
              td Epic Movie
              td Star Wars
              td Bad Boys
              td Madagascar
          
          tr
              td Spartan
              td LOTR
              td Die Hard
              td Finding Nemo
          
          tr
              td Dr. Dolittle
              td The Mummy
              td 300
              td A Bug's Life
          
      

  h2#OneColumnEmphasis.divide-section One Column Emphasis           
  .preview-box
    table( id="one-column-emphasis" summary="2007 Major IT Companies' Profit",class="no-table")
      colgroup
          col( class="oce-first" )
      
      +table(th_cols,td_rows)
          
      

